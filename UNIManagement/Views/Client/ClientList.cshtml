                                    <h1>Client List</h1>

                                </div>
                                <div class="col-md-6 text-end">
                                    <a class="btn btn-primary" asp-controller="Client" asp-action="ClientForm">Add Client</a>

                                </div>
                               
                            </div>
                            <div class="row pt-5">
                                <div id="ClientListPartialView">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>

    </div>
